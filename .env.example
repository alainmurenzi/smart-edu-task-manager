# Environment variables for SMART Edu Task Manager
# Copy this file to .env and fill in the values

# Secret key for Flask sessions (change this in production!)
SECRET_KEY=your-super-secret-key-here-generate-random-string

# Database configuration
# For local development: SQLite (no need to set DATABASE_URL)
# For production (Vercel): PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host:port/database

# Flask Mail Configuration (optional - for email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
